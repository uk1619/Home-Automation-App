<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F3F4F6">

    <!-- Header Text -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Device Control"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#374151" />

    <!-- Status Display -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Status: Disconnected"
        android:textSize="18sp"
        android:textColor="#6B7280" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusText"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:backgroundTint="#6D28D9"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:elevation="6dp" />

    <!-- Connect Button -->
    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_settings"
        android:text="Connect Bluetooth"
        android:backgroundTint="#3B82F6"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="6dp" />

    <!-- Turn ON Device Button -->
    <Button
        android:id="@+id/btn_device_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_connect"
        android:text="Turn ON Device"
        android:backgroundTint="#10B981"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="6dp" />

    <!-- Turn OFF Device Button -->
    <Button
        android:id="@+id/btn_device_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_device_on"
        android:text="Turn OFF Device"
        android:backgroundTint="#EF4444"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="6dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_device_off"
        android:text="Back"
        android:backgroundTint="#9CA3AF"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="6dp" />
</RelativeLayout>
