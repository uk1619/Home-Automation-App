<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_device_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a New Device"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/device_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Device Name"
        android:layout_below="@id/add_device_label"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/submit_device_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/device_name_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />



    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFBB86FC"
        android:text="Go Back"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</RelativeLayout>
